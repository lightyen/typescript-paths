{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "jsx": "preserve",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "strict": true,
    "allowJs": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "noEmit": true,
    "paths": {
      "~/*": ["./src/*"],
      "@/*": ["./src/common/*"],
      "he": ["./src/hello"],
      "cx": ["./node_modules/clsx"]
    }
  }
}
